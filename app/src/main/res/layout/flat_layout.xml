<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="230dp"
    android:layout_margin="@dimen/margin"
    app:cardCornerRadius="@dimen/radius"
    app:cardBackgroundColor="#FFFFFF"
    app:cardElevation="@dimen/elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/flat_image"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/quantum_grey"
            android:contentDescription="@string/flat_icon_description"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/flat_icon_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                android:text="@string/flat_icon_address"
                android:textColor="#000000"
                android:textSize="20sp"
                android:padding="@dimen/padding"/>

            <TextView
                android:id="@+id/flat_icon_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                android:gravity="end"
                android:text="@string/flat_icon_rating"
                android:textColor="#000000"
                android:textSize="18sp"
                android:padding="@dimen/padding"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>