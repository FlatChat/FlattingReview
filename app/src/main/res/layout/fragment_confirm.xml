<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="onboarding.Confirm">

    <TextView
        android:id="@+id/confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:text="@string/are_all_these_details_correct"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:text="@string/address"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/address_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_title" />

    <EditText
        android:id="@+id/address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPostalAddress"
        android:padding="@dimen/padding"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/address_label"
        app:layout_constraintTop_toBottomOf="@+id/confirm_title"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/bedrooms_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:text="@string/bedrooms"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/bathrooms_label"
        app:layout_constraintEnd_toStartOf="@+id/bedrooms_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline4" />

    <EditText
        android:id="@+id/bedrooms_text"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/margin"
        android:autofillHints=""
        android:background="@drawable/rounded_edit_text"
        android:elevation="@dimen/elevation"
        android:ems="10"
        android:hint="@string/empty"
        android:inputType="number"
        android:padding="@dimen/padding"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/bathrooms_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bedrooms_label"
        app:layout_constraintTop_toBottomOf="@+id/guideline4" />

    <TextView
        android:id="@+id/bathrooms_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:text="@string/bathrooms"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/image_check"
        app:layout_constraintEnd_toStartOf="@+id/bathrooms_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bedrooms_label" />

    <EditText
        android:id="@+id/bathrooms_text"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/margin"
        android:autofillHints=""
        android:background="@drawable/rounded_edit_text"
        android:elevation="@dimen/elevation"
        android:ems="10"
        android:hint="@string/empty"
        android:inputType="number"
        android:padding="@dimen/padding"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/image_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bathrooms_label"
        app:layout_constraintTop_toBottomOf="@+id/bedrooms_text" />

    <ImageView
        android:id="@+id/image_check"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_margin="@dimen/margin"
        android:contentDescription="@string/image"
        android:padding="@dimen/padding"
        android:src="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <TextView
        android:id="@+id/terms_conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:layout_marginBottom="132dp"
        android:maxWidth="240dp"
        android:padding="@dimen/padding"
        android:text="@string/terms_and_conditions"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textStyle=""
        app:layout_constraintBottom_toTopOf="@+id/finish_button"
        app:layout_constraintEnd_toStartOf="@+id/checkBox"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_check" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        app:layout_constraintBottom_toTopOf="@+id/finish_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/terms_conditions"
        app:layout_constraintTop_toBottomOf="@+id/image_check" />

    <Button
        android:id="@+id/finish_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:background="@drawable/button_fill"
        android:padding="@dimen/padding"
        android:text="@string/finish"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="274dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="144dp" />


</androidx.constraintlayout.widget.ConstraintLayout>