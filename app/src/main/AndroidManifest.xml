<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.flattingreview">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>



    <application
        android:screenOrientation="portrait"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor">

        <!-- function activities -->
        <activity android:name=".Settings" />
        <activity android:name=".ChangePassword" />

        <!-- Set the splash screen as the first screen when user installs the application -->
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- The remaining activities -->
        <activity android:name=".Search" />
        <activity android:name=".CreateFlat" />
        <activity android:name=".CreateAccount" />
        <activity android:name=".WriteReview" />
        <activity android:name=".SignIn"
            android:theme="@style/SplashTheme"/>
        <activity android:name=".HomeScreen" />
        <activity android:name=".ViewReviews"/>
        <activity android:name=".FlatScreen"/>
        <activity android:name=".DeleteAccount" />



