<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.flattingreview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Set the splash screen as the first screen when user installs the application -->
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- The remaining screens -->
        <activity android:name=".Contact" />
        <activity android:name=".create_new_flat" />
        <activity android:name=".create_account" />
        <activity android:name=".WriteReview" />
        <activity android:name=".SignIn" />
        <activity android:name=".HomeScreen" />
        <activity
            android:name=".ViewReviews"
            android:label="@string/title_activity_view_reviews"
            android:theme="@style/AppTheme.DarkActionBar" />
        <activity android:name=".Flat" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>